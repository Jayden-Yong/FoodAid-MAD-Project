<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/margin_xxlarge"
    android:clickable="true"
    android:focusable="true">

    <include
        android:id="@+id/Toolbar"
        layout="@layout/fragment_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/hsv_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:paddingHorizontal="@dimen/margin_large"
        android:scrollbars="none"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/Toolbar">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checkedChip="@+id/chip_all"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/FoodAidChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Notify_All"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_donation"
                style="@style/FoodAidChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Notify_Donation" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_community"
                style="@style/FoodAidChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Notify_Community" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotifications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_standard"
        app:layout_constraintTop_toBottomOf="@id/hsv_filters"
        app:layout_constraintBottom_toTopOf="@id/tv_view_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_view_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/View_History"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/text_standard"
        android:textAlignment="center"
        android:paddingTop="@dimen/margin_standard"
        android:paddingBottom="@dimen/margin_xlarge"
        android:background="@color/white"
        android:elevation="@dimen/card_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No notifications yet"
        android:textSize="@dimen/text_medium"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#999999"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
