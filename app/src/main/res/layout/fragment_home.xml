<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragments.HomeFragment">

    <LinearLayout
        android:id="@+id/homeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="40dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <TextView
            android:id="@+id/tvWelcomeUser"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/Welcome_User"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_bold"
            android:elevation="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:elevation="0dp">

            <ImageButton
                android:id="@+id/btnToNotification"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="@string/Notification_Bell"
                android:src="@drawable/ic_notification"
                android:backgroundTint="@color/white" />

            <ImageButton
                android:id="@+id/btnToQR"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="@string/QR_Code"
                android:src="@drawable/ic_qr"
                android:backgroundTint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSearch"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/Search_Icon"
                android:src="@drawable/ic_search"
                app:tint="@color/font_hint"/>

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:autofillHints="@null"
                android:background="@null"
                android:hint="@string/Search_Hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/font_hint"
                android:textColorHint="@color/font_hint"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/hsvFilterChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="26dp"
        android:paddingEnd="26dp"
        android:scrollbars="none"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/cvSearch">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:checkedChip="@id/chipAll">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/FoodAidChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Filter_All" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPantry"
                style="@style/FoodAidChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Filter_Pantry" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLeftover"
                style="@style/FoodAidChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Filter_Leftover" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFreeTable"
                style="@style/FoodAidChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Filter_Free_Table" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Fragment Container for Map -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/MapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/hsvFilterChips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:name="com.example.foodaid_mad_project.HomeFragments.MapFragment" />

    <!-- List View (Initially Hidden or overlay) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFoodBanks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/hsvFilterChips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>