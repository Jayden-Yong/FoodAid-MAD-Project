<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notifyBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/notify_bg_grey"
    android:clickable="true"
    android:focusable="true"
    tools:context=".DonateFragments.DonateNotifyFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/notifySuccessIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/primary_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="40dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/Success"
                    android:padding="17dp"
                    android:src="@drawable/ic_success" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvClaimTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/Donation_Posted"
                android:textColor="@color/font_primary"
                android:textSize="26sp"
                android:fontFamily="@font/poppins_semi_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notifySuccessIcon" />

            <TextView
                android:id="@+id/tvClaimGuide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/Donation_Notify"
                android:textColor="@color/font_primary"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvClaimTitle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewQr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="40dp"
                android:paddingVertical="8dp"
                android:text="@string/View_Item"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                app:backgroundTint="@color/primary_color"
                app:cornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvClaimGuide" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToHome"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="40dp"
                android:paddingVertical="8dp"
                android:text="@string/Back_to_Home"
                android:textAllCaps="false"
                android:textColor="@color/primary_color"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                app:cornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnViewQr"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="2dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>