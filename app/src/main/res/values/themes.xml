<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodAidMADProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:textColorHint">@color/font_primary</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_color_opacity_40</item>
    </style>

    <style name="FoodAidImpactDateRangeBtnStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_impact_time_range_btn</item>
        <item name="android:textColor">@color/text_impact_time_range_btn</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FoodAidDonateTypeBtnStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_donate_type_btn</item>
        <item name="android:textColor">@color/text_donate_type_btn</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FoodAidChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/filter_chip_bg</item>
        <item name="android:textColor">@color/filter_chip_text</item>
        <item name="chipStrokeColor">@color/primary_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStartPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Theme.FoodAidMADProject" parent="Base.Theme.FoodAidMADProject" />
</resources>