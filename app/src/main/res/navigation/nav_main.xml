<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.foodaid_mad_project.HomeFragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action android:id="@+id/action_to_impact" app:destination="@id/impactFragment"/>
        <action android:id="@+id/action_to_community" app:destination="@id/communityFragment"/>
        <action android:id="@+id/action_to_profile" app:destination="@id/profileFragment"/>
    </fragment>

    <fragment
        android:id="@+id/impactFragment"
        android:name="com.example.foodaid_mad_project.ImpactFragments.ImpactFragment"
        android:label="fragment_impact"
        tools:layout="@layout/fragment_impact" />

    <fragment
        android:id="@+id/communityFragment"
        android:name="com.example.foodaid_mad_project.CommunityFragments.CommunityFragment"
        android:label="fragment_community"
        tools:layout="@layout/fragment_community" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.foodaid_mad_project.ProfileFragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_privacy"
            app:destination="@id/privacyFragment" />
        <action
            android:id="@+id/action_profile_to_helpFAQ"
            app:destination="@id/helpFAQFragment" />
        <action
            android:id="@+id/action_profile_to_contactReport"
            app:destination="@id/contactReportFragment" />
    </fragment>

    <fragment
        android:id="@+id/completeProfileFragment"
        android:name="com.example.foodaid_mad_project.AuthFragments.CompleteProfileFragment"
        android:label="fragment_complete_profile"
        tools:layout="@layout/fragment_complete_profile">
        <action
            android:id="@+id/action_completeProfile_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/completeProfileFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.foodaid_mad_project.HomeFragments.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/privacyFragment"
        android:name="com.example.foodaid_mad_project.ProfileFragments.PrivacyFragment"
        android:label="fragment_privacy"
        tools:layout="@layout/fragment_privacy" />

    <fragment
        android:id="@+id/helpFAQFragment"
        android:name="com.example.foodaid_mad_project.ProfileFragments.HelpFAQFragment"
        android:label="fragment_help_faq"
        tools:layout="@layout/fragment_help_faq" />

    <fragment
        android:id="@+id/contactReportFragment"
        android:name="com.example.foodaid_mad_project.ProfileFragments.ContactReportFragment"
        android:label="fragment_contact_report"
        tools:layout="@layout/fragment_contact_report" />
</navigation>